    <div class="container">
        <div class="col-12">
                <h1>Registration numbers:</h1>

             
                <div>
                    <h4>{{massege.error}}</h4>
                </div>
                <form action="/reg_numbers" method="POST">

                    <input type="text" value="" placeholder="e.g CA 123 567" class="textName1" name="firstname"
                        maxlength=10 style="color: black">
                    <input class="submBtn1" type="submit" value="ADD" id="addBtn">
                </form>
                <form action="/filter" method="POST">
                    <div>
                        <label>
                            <input type="radio" class="radioBtn1" name="RegNumber1" value="CY"> Bellville
                        </label>

                        <label class="radio">
                            <input type="radio" class="radioBtn1" name="RegNumber1" value="CA"> Cape Town
                        </label>

                        <label class="radio">

                            <input type="radio" class="radioBtn1" name="RegNumber1" value="CF"> Paarl
                        </label>

                        <label class="radio">

                            <button type="radio" class="radioBtn1" name="RegNumber1" value=""> Show All</button>
                        </label>
                    </div>
                </form>
                <div class="col-6 regNumbers">
                            <ul>
                                {{#each regis}}

                                <li>{{registration}}</li>

                                {{/each}}
                            </ul>
                    </div>
                <button class="ResetBtn1" type="submit" value="Reset" id="resetBtn" style="color: black !important">RESET</button> 
        </div>
    </div>